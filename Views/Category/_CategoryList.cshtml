@model X.PagedList.IPagedList<DemoDishOfProj.Models.Category>
@using X.PagedList.Mvc.Core
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <button class="btn btn-warning btn-sm editBtn" data-id="@item.Id" data-name="@item.Name">Sửa</button>
                    <button class="btn btn-danger btn-sm deleteBtn" data-id="@item.Id">Xóa</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    .pagination .active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
{
    UlElementClasses = new[] { "pagination", "justify-content-center" },
    LiElementClasses = new[] { "page-item" },
    PageClasses = new[] { "page-link" }
})

