@model DemoDishOfProj.Models.Dish

<h2>Thêm món ăn</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Tên món ăn</label>
        <input type="text" class="form-control" asp-for="Name" required>
    </div>
    <div class="form-group">
        <label>Mô tả</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label>Giá</label>
        <input type="number" class="form-control" asp-for="Price" required>
    </div>
    <div class="form-group">
        <label>Danh mục</label>
        <select class="form-control" asp-for="CategoryId">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Ảnh món ăn</label>
        <input type="file" class="form-control" asp-for="ImageFile">
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
</form>
<a asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>

